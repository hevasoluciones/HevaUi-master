    <g:HTMLPanel>
        <body class="texture">
            <div id="cl-wrapper" class="login-container">
                <div class="middle-login">
                    <div class="block-flat">
                        <div class="header">							
                            <h3 class="text-center">
                                <img class="logo-img" src="images/logo.png" alt="logo"></img>
                            </h3>
                        </div>
                        <div>
                            <form style="margin-bottom: 0px !important;" class="form-horizontal" action="http://www.condorthemes.com/flatdream/index.html">
                                <div class="content">
                                    <h4 class="title">Login Access</h4>
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <div class="input-group error">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-user"></i>
                                                </span>
                                                <input type="text" placeholder="Username" ui:field="username" class="form-control"></input>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <div class="input-group">
                                                <span ui:field="spanpsw" class="input-group-addon">
                                                    <i class="fa fa-lock"></i>
                                                </span>
                                                <input ui:field="password" type="password" placeholder="Password" class="form-control"></input>
                                            </div>
                                        </div>
                                    </div>
							
                                </div>
                                <div class="foot">
                                    <g:Button ui:field="btnRegister">Register</g:Button>
                                    <g:Button ui:field="btnLogin">Log me in</g:Button>                                
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="text-center out-links">
