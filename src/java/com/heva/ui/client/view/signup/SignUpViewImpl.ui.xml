<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>

    </ui:style>
    <g:HTMLPanel>
        <body class="texture">        
            <div id="cl-wrapper" class="sign-up-container">
                <div class="middle-sign-up">
                    <div class="block-flat">
                        <div class="header">							
                            <h3 class="text-center">
                                <img class="logo-img" src="images/logo.png" alt="logo"/>
                            </h3>
                        </div>
                        <div>
                            <form style="margin-bottom: 0px !important;" class="form-horizontal" action="http://www.condorthemes.com/flatdream/index.html">
                                <div class="content">
                                    <h5 class="title text-center">
                                        <strong>Sign Up</strong>
                                    </h5>
                                    <hr></hr>
                                    <div class="form-group">
                                        <div class="col-md-6 col-sm-6 col-xs-6">
                                            <button class="btn btn-block btn-trans btn-facebook bg btn-rad" type="button">
                                                <i class="fa fa-facebook"></i> Sign in with Facebook</button>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6">
                                            <button class="btn btn-block btn-trans btn-twitter bg btn-rad" type="button">
                                                <i class="fa fa-twitter"></i> Sign in with Twitter</button>
                                        </div>
                                    </div>
                                    <p class="text-center">Or</p>
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <div class="input-group">
                                                <span id="spanun" class="input-group-addon">
                                                    <i class="fa fa-user"></i>
                                                </span>
                                                <input id="username" type="text" name="nick" parsley-trigger="change" parsley-error-container="#nick-error" placeholder="Username" class="form-control"></input>
                                            </div>
                                            <div id="nick-error"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <div class="input-group">
                                                <span id="spanemail" class="input-group-addon">
                                                    <i class="fa fa-envelope"></i>
                                                </span>
                                                <input id="email" type="email" name="email" parsley-trigger="change" parsley-error-container="#email-error" placeholder="E-mail" class="form-control"></input>
                                            </div>
                                            <div id="email-error"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-6 col-xs-6">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-lock"></i>
                                                </span>
                                                <input id="pass1" type="password" parsley-error-container="#password-error" placeholder="Password" class="form-control"></input>
                                            </div>
                                            <div id="password-error"></div>
                                        </div>
                                        <div class="col-sm-6 col-xs-6">
                                            <div class="input-group">
                                                <span id="spanp2" class="input-group-addon">
                                                    <i class="fa fa-lock"></i>
                                                </span>
                                                <input id="pass2" parsley-equalto="#pass1" type="password" parsley-error-container="#confirmation-error" placeholder="Password" class="form-control"></input>
                                            </div>
                                            <div id="confirmation-error"></div>
                                        </div>
                                    </div>
                                    <p class="spacer">By creating an account, you agree with the <a href="#">Terms</a> and <a href="#">Conditions</a>.</p>
                                    <g:Button ui:field="btnSignUp">Sign Up</g:Button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="text-center out-links">
                        <a href="#">Â© 2015 INSUMMIS</a>
                    </div>
                </div> 	
            </div>
        </body>
    </g:HTMLPanel>
</ui:UiBinder>